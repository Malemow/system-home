set laststatus=2
set t_Co=256
set clipboard=unnamed

" search
set hlsearch
set ignorecase
set incsearch

" tab and space
set softtabstop=4
set shiftwidth=4
set expandtab

" tab
set showtabline=2
set splitbelow
set splitright

" view
set number
set cursorline
set wrap
set linebreak
set showmode
set showcmd
set smartcase
set list

" save
set noswapfile

" color
syntax on
set background=dark

" filetype
filetype on
filetype indent on
filetype plugin on
